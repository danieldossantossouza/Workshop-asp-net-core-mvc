
@{
	ViewData["Title"] = "Registros de Vendas";
}

<h2>@ViewData["Title"]</h2>
<br />
<br />
<div class="row">
	<div class="col-lg-6">
		<form class="form-horizontal" asp-action="SimpleSearch">
			<fieldse>
				<legend>
					Pesquisa Simples
				</legend>
				<div class="form-group">
					<label for="minDate" class="col-lg-2 control-label">Data minima</label>
					<div class="col-lg-10">
						<input type="date" name="minDate" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label for="maxDate" class="col-lg-2 control-label">Data máxima</label>
					<div class="col-lg-10">
						<input type="date" name="maxDate" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button type="submit" class="btn btn-default">Submit</button>
					</div>
				</div>
			</fieldse>
		</form>
	</div>
</div>

<br />
<br />

<div class="row">
	<div class="col-lg-6">
		<form class="form-horizontal" asp-action="GroupingSearch">
			<fieldse>
				<legend>
					Pesquisa de agrupamento
				</legend>
				<div class="form-group">
					<label for="minDate" class="col-lg-2 control-label">Data minima</label>
					<div class="col-lg-10">
						<input type="date" name="minDate" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label for="maxDate" class="col-lg-2 control-label">Data máxima</label>
					<div class="col-lg-10">
						<input type="date" name="maxDate" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button type="submit" class="btn btn-primary">Submit</button>
						
					</div>
				</div>
			</fieldse>
		</form>
	</div>
</div>



